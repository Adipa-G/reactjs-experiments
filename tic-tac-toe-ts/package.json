{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/react": "^16.4.9",
    "@types/react-dom": "^16.0.7",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "scripts": {
    "start": "webpack-dev-server --mode=development --hot --inline",
    "build": "webpack --mode=development",
    "test": "jest",
    "preinstall": "start npm i -g webpack webpack-cli jest && start npm link webpack"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "awesome-typescript-loader": "^5.2.0",
    "babel-jest": "^23.4.2",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1",
    "webpack-cli": "^3.1.0",
    "webpack-command": "^0.4.1",
    "webpack-dev-server": "^3.1.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/src-test/setup.js",
    "testPathIgnorePatterns" : ["/node_modules/","setup.js"],
    "testRegex": "(/src-test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
